{
  "name": "local",
  "address": "127.0.0.1",
  "port": 8079,
  "timeout_sec": 6000,
  "tokio_event_interval": 20,
  "tokio_queue_interval": 20,
  "limits" : {
    "timeout_sec": 6000,
    "mem_min_mb": 5,
    "mem_max_mb": 2048,
    "cpu_max": 10
  },
  "invocation": {
    "retries": 0,
    "queue_sleep_ms": 10,
    "queue_policy": "fcfs",
    "concurrent_invokes": 4
  },
  "logging": {
    "level": "info",
    "directory": "/tmp/ilúvatar/logs",
    "basename": "worker",
    "spanning": "NEW+CLOSE",
    "flame": "",
    "span_energy_monitoring": false
  },
  "container_resources": {
    "memory_mb": 20480,
    "cores": 4,
    "eviction": "LRU",
    "startup_timeout_ms": 10000,
    "memory_buffer_mb": 0,
    "pool_freq_ms": 5,
    "backend": "containerd",
    "snapshotter": "zfs",
    "concurrent_creation": 5,
    "gpus": 1
  },
  "networking": {
    "bridge": "IlWorkBr0",
    "cnitool": "/opt/cni/bin/cnitool",
    "cni_plugin_bin": "/opt/cni/bin",
    "cni_name": "il_worker_br",
    "use_pool": true,
    "pool_size": 20,
    "pool_freq_ms": 1,
    "hardware_interface": "enp4s0"
  },
  "load_balancer_url": "http://localhost:8078",
  "graphite": {
    "address": "localhost",
    "api_port": "80",
    "ingestion_port": 2003,
    "ingestion_udp": false,
    "enabled": true
  },
  "energy": {
    "perf_freq_ms": 1000,
    "rapl_freq_ms": 1000,
    "ipmi_freq_ms": 0,
    "process_freq_ms": 1000,
    "ipmi_pass_file": "",
    "ipmi_ip_addr": "",
    "log_folder": "/tmp/ilúvatar/logs/"
  },
  "status": {
    "report_freq_ms": 5000
  }
}
